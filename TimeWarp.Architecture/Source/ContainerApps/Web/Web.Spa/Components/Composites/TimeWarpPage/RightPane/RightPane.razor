@{
  #pragma warning disable FluentMultiSplitter
}
@using TimeWarp.Architecture.Components.Composites.TimeWarpPage.RightPane
@using TimeWarp.Architecture.Components.Composites.TimeWarpPage.RightPane.RightPane_Main
@inherits TimeWarpPageSubComponentBase

@code
{
  protected override void OnInitialized()
  {
    base.OnInitialized();
    BaseCssClass = "right-pane";
  }
}

<FluentStack Class=@BaseCssBuilder.ToString() Orientation=Orientation.Vertical >
  <RightPane_Header />
  <RightPane_Main />
  <FluentSpacer />
  <RightPane_Footer />
</FluentStack>

<style>
  @($@"
    .{Id}.right-pane {{
      height: 100%;
    }}
  ")
</style>
