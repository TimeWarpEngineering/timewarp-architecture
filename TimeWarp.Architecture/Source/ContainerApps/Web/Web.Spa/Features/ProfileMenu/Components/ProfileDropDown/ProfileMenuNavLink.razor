@namespace TimeWarp.Architecture.Features.ProfileMenus.Components
@inherits BaseComponent
@implements IParentComponent

<a class="block px-4 py-2 text-sm leading-5 text-gray-700 hover:bg-gray-100 focus:outline-none focus:bg-gray-100" tabindex=@GetTabIndex() role="menuitem" @attributes=Attributes>
  @ChildContent
</a>

@code
{
  [Parameter,EditorRequired] public RenderFragment ChildContent { get; set; } = default!;

  int? GetTabIndex() => ProfileMenuState.MenuState == ProfileMenuState.MenuStates.Open ? null : -1;
}
