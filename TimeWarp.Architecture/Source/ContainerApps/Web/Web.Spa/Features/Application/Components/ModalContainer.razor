@namespace TimeWarp.Architecture.Components
@using static TimeWarp.Architecture.Features.Applications.ApplicationState;
@inherits BaseComponent

@if (IsActive)
{
  <div class="relative z-10" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75"></div>
    <div class="fixed inset-0 z-10 overflow-y-auto">
      <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
        <div class="relative overflow-hidden rounded-lg bg-white px-4 pt-5 pb-4 text-left shadow-xl sm:my-8 sm:w-1/2 sm:max-w-md sm:p-6">
          @MainContent
          <div class="mt-5 sm:mt-6">
            @if (ActionContent is null)
            {
              <FluentButton Appearance=Appearance.Accent data-qa="ModalButton" OnClick=CloseModal>Close</FluentButton>
            }
            else
            {
              @ActionContent
            }
          </div>
        </div>
      </div>
    </div>
  </div>
}


