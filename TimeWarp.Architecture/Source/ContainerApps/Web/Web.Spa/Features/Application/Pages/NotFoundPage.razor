@namespace TimeWarp.Architecture.Pages
@using TimeWarp.Architecture.Components.Pages.SitePage
@inherits BaseComponent

<PageTitle>Page Not Found</PageTitle>
<SitePage Tip=@GetType().Name ShowInBreadcrumbs=false>

  <PagePane_MainContent>
    <main class="error-page">
      <div class="error-content">
        <p class="error-code">403</p>
        <h1 class="error-title">Forbidden</h1>
        <p class="error-message">You do not have permission to access this resource. Please ensure you are logged in with the correct permissions.</p>
        <div class="error-actions">
          <a href="#" class="home-button">Go back home</a>
          <a href="#" class="support-link">Contact support <span aria-hidden="true">&rarr;</span></a>
        </div>
      </div>
    </main>
  </PagePane_MainContent>
</SitePage>

<style>
  .error-page {
    display: grid;
    min-height: 100vh;
    place-items: center;
    background-color: white;
    padding: 6rem 1.5rem;
  }

  .error-content {
    text-align: center;
  }

  .error-code {
    font-size: 1rem;
    font-weight: 600;
    color: #4f46e5;
  }

  .error-title {
    margin-top: 1rem;
    font-size: 1.875rem;
    font-weight: 700;
    letter-spacing: -0.025em;
    color: #111827;
  }

  .error-message {
    margin-top: 1.5rem;
    font-size: 1rem;
    line-height: 1.75;
    color: #4b5563;
  }

  .error-actions {
    margin-top: 2.5rem;
    display: flex;
    justify-content: center;
    gap: 1.5rem;
  }

  .home-button {
    display: inline-block;
    border-radius: 0.375rem;
    background-color: #4f46e5;
    padding: 0.625rem 0.875rem;
    font-size: 0.875rem;
    font-weight: 600;
    color: white;
    text-decoration: none;
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    transition: background-color 0.2s;
  }

  .home-button:hover {
    background-color: #4338ca;
  }

  .home-button:focus {
    outline: 2px solid transparent;
    outline-offset: 2px;
    box-shadow: 0 0 0 2px #4f46e5;
  }

  .support-link {
    font-size: 0.875rem;
    font-weight: 600;
    color: #111827;
    text-decoration: none;
  }

  ::deep @@media (min-width: 640px) {
    .error-page {
      padding: 8rem 1.5rem;
    }

    .error-title {
      font-size: 3rem;
    }
  }

  ::deep @@media (min-width: 1024px) {
    .error-page {
      padding: 8rem 2rem;
    }
  }
</style>
