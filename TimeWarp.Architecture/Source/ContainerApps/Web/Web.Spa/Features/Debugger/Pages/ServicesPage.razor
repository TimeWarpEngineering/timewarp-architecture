@namespace TimeWarp.Architecture.Pages
@inherits BaseComponent

@code {
  public static string Title => "Services";
  public static readonly RenderFragment NavLink =
    @<FluentNavLink Icon=@(new Icons.Regular.Size20.Question()) Href=@GetPageUrl() Match=NavLinkMatch.All>@Title</FluentNavLink>;
}

<StackedPage>
    <HeaderContent>Middleware Services</HeaderContent>
    <MainContent>
        <ServiceList Title="IPipelineBehavior" Services=PipelineBehaviors />
        <ServiceList Title="IRequestPreProcessor" Services=RequestPreProcessors />
        <ServiceList Title="IRequestPostProcessor" Services=RequestPostProcessors />
        <ServiceList Title="IStreamPipelineBehavior" Services=StreamPipelineBehaviors />
    </MainContent>
</StackedPage>
