@namespace TimeWarp.Blazor.Pages

@page "/"

@inherits BaseComponent

<Page>
  <HeaderContent>
    @ApplicationState.Name
  </HeaderContent>

  <MainContent>
    <div class="px-4 py-6 sm:px-0">
      <VStack>
        <p>
          Welcome to your new app with <HyperLink href="https://timewarpengineering.github.io/blazor-state/"> Blazor State</HyperLink> management and an easily extensible pipeline utilizing
          <HyperLink href="https://github.com/jbogard/MediatR">MediatR.</HyperLink>
        </p>
        <p class="mt-4">
          <HyperLink href="https://github.com/TimeWarpEngineering/blazor-state">Blazor State GitHub project</HyperLink>
        </p>
        
        <HyperLink href="https://chrome.google.com/webstore/detail/redux-devtools/lmhkpmbekcpmknklioeibfkpmmfibljd?hl=en">Redux Dev Tools Chrome Extension </HyperLink>

        <SimpleAlert class="mt-4" Title="Tailwind UI">
          This site is built with
          <HyperLink href="https://tailwindcss.com/">Tailwind css</HyperLink>
          and
          <HyperLink href="https://tailwindui.com">Tailwind UI</HyperLink>
        </SimpleAlert>

        <img class="w-full" src="/images/TheFreezeTeam/SOLID_Team.png" />
      </VStack>
    </div>
  </MainContent>
</Page>
