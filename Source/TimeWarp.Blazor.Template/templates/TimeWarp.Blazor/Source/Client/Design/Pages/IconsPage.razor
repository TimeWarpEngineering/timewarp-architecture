@namespace TimeWarp.Blazor.Design
@page "/Design/Icons"

<VStack class="m-4 justify-center items-center">
  <VStack class="mt-4 p-2 border justify-center items-center">
    <Heading class="font-bold text-medium">Hero Icons Solid</Heading>
    <HStack class="justify-center flex-wrap">
      <VStack class="m-2 items-center">
        <Text>@nameof(LockClosedIcon)</Text>
        <LockClosedIcon class="h-12 w-12" />
        <LockClosedIcon class="h-8 w-8 text-primary-500" />
      </VStack>
      <VStack class="m-2 items-center">
        <Text>@nameof(MenuIcon)</Text>
        <MenuIcon class="h-12 w-12" />
        <MenuIcon class="h-8 w-8 text-primary-500" />
      </VStack>
      <VStack class="m-2 items-center">
        <Text>@nameof(X_Icon)</Text>
        <X_Icon class="h-12 w-12" />
        <X_Icon class="h-8 w-8 text-primary-500" />
      </VStack>
    </HStack>
  </VStack>

  <VStack class="mt-4 p-2 border justify-center items-center">
    <Heading class="font-bold text-medium">Hero Icons Outline</Heading>
    <HStack class="flex-wrap ">
      <VStack class="m-2 items-center">
        <Text>@nameof(BellIcon)</Text>
        <HeroIcons.Outline.BellIcon class="h-12 w-12" />
        <HeroIcons.Outline.BellIcon class="h-8 w-8 text-primary-500" />
      </VStack>
    </HStack>
  </VStack>
</VStack>

@code
{
  private const string RouteTemplate = "/Design/Icons";

  public static string GetRoute() => RouteTemplate;
}
