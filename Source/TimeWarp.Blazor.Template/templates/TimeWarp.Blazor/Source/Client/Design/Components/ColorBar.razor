@namespace TimeWarp.Blazor.Design.Components
@inherits DisplayComponent

<div class="relative my-8 overflow-hidden rounded shadow-md1">
  <div class=@($"relative shadow bg-{TailwindColor.ToLowerInvariant()}-500 text-black px-3 py-4 md:py-1 text-sm font-semibold flex justify-between")>
    <div class="uppercase">@TailwindColor</div>
  </div>
  <div class="md:flex md:flex-row">
    @for(int index=0; index<10; index++)
    {
      <ColorBox ColorIndex=@index TailwindColor=@TailwindColor ></ColorBox>
    }
  </div>
</div>
