<Project>
  <!-- Set common properties regarding assembly information and nuget packages -->
  
  <PropertyGroup>
    <Authors>Steven T. Cramer</Authors>
    <Product>TimeWarp.Blazor</Product>
  </PropertyGroup>

  <!-- Common compile parameters -->
  <PropertyGroup>
    <Nullable>disable</Nullable>
    <LangVersion>preview</LangVersion>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
    <!-- We use full (Windows PDBs) until cross platform support for source link will get better -->
    <DebugType>full</DebugType>
  </PropertyGroup>

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <TestProjectTargetFramework>netcoreapp3.1</TestProjectTargetFramework>
  </PropertyGroup>

  <!--Versions of packages used across the solution-->
  <PropertyGroup Label="Package Versions">
    <MicrosoftAspNetCoreBlazorVersion>3.2.1</MicrosoftAspNetCoreBlazorVersion>
    <MicrosoftAspNetCoreVersion>3.1.6</MicrosoftAspNetCoreVersion> 
    
    <MicrosoftAspNetCoreBlazorHttpClientVersion>$(MicrosoftAspNetCoreBlazorVersion)</MicrosoftAspNetCoreBlazorHttpClientVersion>
    <MicrosoftAspNetCoreComponentsWebAssemblyBuildVersion>$(MicrosoftAspNetCoreBlazorVersion)</MicrosoftAspNetCoreComponentsWebAssemblyBuildVersion>
    <MicrosoftAspNetCoreComponentsWebAssemblyServerVersion>$(MicrosoftAspNetCoreBlazorVersion)</MicrosoftAspNetCoreComponentsWebAssemblyServerVersion>
    <MicrosoftAspNetCoreComponentsWebAssemblyVersion>$(MicrosoftAspNetCoreBlazorVersion)</MicrosoftAspNetCoreComponentsWebAssemblyVersion>
    <MicrosoftAspNetCoreMvcTestingVersion>3.1.9</MicrosoftAspNetCoreMvcTestingVersion>
    <MicrosoftAspNetCoreSignalRClientVersion>3.1.9</MicrosoftAspNetCoreSignalRClientVersion>
    <MicrosoftCodeAnalysisFxCopAnalyzersVersion>3.3.0</MicrosoftCodeAnalysisFxCopAnalyzersVersion>
    <SystemConfigurationConfigurationManagerVersion>4.7.0</SystemConfigurationConfigurationManagerVersion>
    <SystemNetHttpJsonVersion>3.2.1</SystemNetHttpJsonVersion>
    <SystemTextJsonVersion>4.7.2</SystemTextJsonVersion>

    <AutoMapperExtensionsMicrosoftDependencyInjectionVersion>8.0.1</AutoMapperExtensionsMicrosoftDependencyInjectionVersion>
    <AutoMapperVersion>10.0.0</AutoMapperVersion>
    <BlazorComponentUtilitiesVersion>1.6.0</BlazorComponentUtilitiesVersion>
    <BlazorExtensionsLoggingVersion>0.4.0</BlazorExtensionsLoggingVersion>
    <BlazorStateVersion>3.3.0</BlazorStateVersion>
    <DawnGuardVersion>1.12.0</DawnGuardVersion>
    <FixieConsoleVersion>2.2.1</FixieConsoleVersion>
    <FixieVersion>2.2.1</FixieVersion>
    <FluentAssertionsVersion>5.10.3</FluentAssertionsVersion>
    <FluentValidationAspNetCoreVersion>9.2.0</FluentValidationAspNetCoreVersion>
    <FluentValidationVersion>9.2.2</FluentValidationVersion>
    <LiveSharpVersion>1.6.12</LiveSharpVersion>
    <MediatrExtensionsMicrosoftDependencyInjectionVersion>9.0.0</MediatrExtensionsMicrosoftDependencyInjectionVersion>
    <MediatrVersion>9.0.0</MediatrVersion>
    <MicroElementsSwashbuckleFluentValidationVersion>4.0.0</MicroElementsSwashbuckleFluentValidationVersion>
    <PeterLeslieMorrisBlazorFluentValidationVersion>1.4.0</PeterLeslieMorrisBlazorFluentValidationVersion>
    <SeleniumSupportVersion>3.141.0</SeleniumSupportVersion>
    <SeleniumWebDriverVersion>3.141.0</SeleniumWebDriverVersion>
    <ShouldlyVersion>3.0.2</ShouldlyVersion>
    <SwashbuckleAspNetCoreAnnotationsVersion>5.6.3</SwashbuckleAspNetCoreAnnotationsVersion>
    <SwashbuckleAspNetCoreFiltersVersion>6.0.0</SwashbuckleAspNetCoreFiltersVersion>
    <SwashbuckleAspNetCoreSwaggerGenVersion>5.6.3</SwashbuckleAspNetCoreSwaggerGenVersion>
    <SwashbuckleAspNetCoreSwaggerUIVersion>5.6.3</SwashbuckleAspNetCoreSwaggerUIVersion>
    <SwashbuckleAspNetCoreSwaggerVersion>5.6.3</SwashbuckleAspNetCoreSwaggerVersion>   
  </PropertyGroup>
</Project>
