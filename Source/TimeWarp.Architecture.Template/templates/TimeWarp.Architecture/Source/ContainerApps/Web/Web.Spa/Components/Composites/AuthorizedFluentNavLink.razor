@namespace TimeWarp.Architecture.Components
@inherits FluentNavLink

<AuthorizeView Policy=@Policy>
  <Authorized>
    @BaseRenderFragment
  </Authorized>
</AuthorizeView>

@code {
  [Parameter, EditorRequired] public string Policy { get; set; } = default!;

  private RenderFragment BaseRenderFragment => base.BuildRenderTree;

  protected override void OnParametersSet()
  {
    base.OnParametersSet();
    if (Policy is null) throw new ArgumentNullException(nameof(Policy));
  }
}
