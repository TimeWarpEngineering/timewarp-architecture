@namespace TimeWarp.Architecture.Features.Sidebars
@inherits BaseComponent

@if (SidebarState.IsOpen)
{
  <div class="relative z-50 lg:hidden " role="dialog" aria-modal="true">

    <div class=@BackdropClasses></div>

    <div class="fixed inset-0 flex">

      <div class=@MenuClasses>

        <div class=@CloseButtonClasses>
          <button data-qa="SidebarMobileMenuCloseButton" @onclick=CloseSideBar type="button" class="-m-2.5 p-2.5">
            <span class="sr-only">Close sidebar</span>
            <TimeWarp.HeroIcons.Mini.Solid.XMarkIcon class="h-6 w-6 text-white" />
          </button>
        </div>

        <!-- Sidebar component, swap this element with another sidebar if you like -->
        <Sidebar />
      </div>
    </div>
  </div>
}
