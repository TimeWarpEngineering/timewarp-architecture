@namespace Tailwind.ApplicationUi.Navigation.Navbars.SimpleDarkWithMenuButtonOnLeft
@inherits ParentComponent

<NavLink href=@Href
         target=@Target
         class="ml-4
   px-3
   py-2
   rounded-md
   text-sm
   font-medium
   leading-5
   text-gray-300
   hover:text-white
   hover:bg-gray-700
   focus:outline-none
   focus:text-white
   focus:bg-gray-700
   transition
   duration-150
   ease-in-out">
  @ChildContent
</NavLink>

@code{
  public enum TargetValue
  {
    _blank,
    _parent,
    _self,
    _top
  }

  [Parameter] public string Href { get; set; }
  [Parameter] public TargetValue Target { get; set; } = TargetValue._self;

}
