@namespace TimeWarp.Architecture.Features.Applications.Components.NavBars.Dark
@inherits ParentComponent

<NavLink
  href=@Href
  target=@Target
  class="ml-4
   px-3
   py-2
   rounded-md
   text-sm
   font-medium
   leading-5
   text-gray-300
   hover:text-white
   hover:bg-gray-700
   focus:outline-none
   focus:text-white
   focus:bg-gray-700
   transition
   duration-150
   ease-in-out"
>
  @ChildContent
</NavLink>

@code{
  public enum TargetValue
  {
    // ReSharper disable once InconsistentNaming
    _blank,
    // ReSharper disable once InconsistentNaming
    _parent,
    // ReSharper disable once InconsistentNaming
    _self,
    // ReSharper disable once InconsistentNaming
    _top
  }

  [Parameter, EditorRequired] public string Href { get; set; } = default!;
  [Parameter] public TargetValue Target { get; set; } = TargetValue._self;

  protected override void OnParametersSet()
  {
    base.OnParametersSet();
    if (Href is null)
    {
      throw new ArgumentException("The Href parameter is required.");
    }
  }
}
