@namespace TimeWarp.Architecture.Components
@inherits BaseComponent

<footer class="bg-white">
  @if (CustomContent is not null)
  {
    @CustomContent
  }
  else
  {
    <!-- Default Footer -->
    <div class="max-w-screen-xl px-4 py-4 mx-auto sm:px-6 md:flex md:items-center md:justify-between lg:px-8">
      <BlazorLocation TestId="BlazorLocation" />
      <div>
        @if (IsProcessing)
        {
          <div
            style="border-top-color:transparent"
            class="w-6 h-6 border-4 border-solid rounded-full border-primary-400 animate-spin">
          </div>
        }
      </div>
      <span>Version:@Version</span>
    </div>
  }
</footer>
