@namespace TimeWarp.Architecture.Components

@using Microsoft.AspNetCore.Components.Routing

@inherits ComponentBase

<Router AppAssembly="typeof(Client.Program).Assembly"  PreferExactMatches=@true>
  <Found Context="routeData">
    <RouteView RouteData=@routeData DefaultLayout=@typeof(TimeWarp.Architecture.Components.EmptyLayout) />
  </Found>
  <NotFound>
    <h1>Page not found</h1>
    <p>Sorry, but there's nothing here!</p>
  </NotFound>
</Router>
