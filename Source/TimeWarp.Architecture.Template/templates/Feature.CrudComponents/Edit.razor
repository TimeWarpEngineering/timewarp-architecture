@namespace eShopOnBlazorWasm.Features.CatalogItems.Components
@inherits BaseComponent

<h4>Catalog Item Edit Component</h4>
<div>
  <EditForm Model=@UpdateCatalogItemRequest OnValidSubmit=@HandleValidSubmit>
    <Validate />
    <ValidationSummary />
    <div class="form-group">
      <label for="Name">Name</label>
      <InputText @bind-Value=UpdateCatalogItemRequest.Name class="form-control" id="Name" />
    </div>
    <div class="form-group">
      <label for="Description">Description</label>
      <InputText @bind-Value=UpdateCatalogItemRequest.Description class="form-control" id="Description" />
    </div>
    <div class="form-group">
      <label for="Brand">Brand</label>
      <InputSelectNumber @bind-Value=UpdateCatalogItemRequest.CatalogBrandId class="form-control" id="Brand">
        @foreach (CatalogBrandDto catalogBrand in CatalogBrands)
{
<option value="@catalogBrand.Id">@catalogBrand.Brand</option>
}
      </InputSelectNumber>
    </div>
    <div class="form-group">
      <label for="Type">Type</label>
      <InputSelectNumber @bind-Value=UpdateCatalogItemRequest.CatalogTypeId class="form-control" id="Type">
        @foreach (CatalogTypeDto catalogType in CatalogTypes)
{
<option value="@catalogType.Id">@catalogType.Type</option>
}
      </InputSelectNumber>
    </div>
    <div class="form-group">
      <label for="Price">Price</label>
      <InputNumber @bind-Value=UpdateCatalogItemRequest.Price class="form-control" id="Price" />
    </div>
    <input type="submit" class="btn btn-primary" value="Save" />
  </EditForm>

</div>

